         }
    });

    




    $.ajax({
        type: "POST",
        url: "/formReca",
        data: { 
            fecha: $("#fechaac").val() 
        },
        success: function(data) {
   
            $("#tbodyreca").empty();
            var jsonrecept = JSON.stringify(data);
            var jsondata=$.parseJSON(jsonrecept);
            $.each(jsondata, function(i, d) {

        });

        },
        error: function(error) {
            console.log("some error in fetching the notifications");
         }
    });



});





function addYears(num){
  var currYear = new Date().getFullYear();
  var currMonth = new Date().getMonth();
  return new Date(currYear+num, currMonth, 1);
}




